{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "independent": true,
  "npmClient": "yarn",
  "version": "independent",
  "packages": [
    "packages/core/**",
    "packages/react/**",
    "packages/svelte/**",
    "packages/react-playground/**",
    "packages/svelte-playground/**"
  ],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.com/",
      "npmClient": "npm"
    }
  }
}
